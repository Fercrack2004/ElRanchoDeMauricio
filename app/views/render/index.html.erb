  <script>
    // Toggle menu for small screens
    const menuBtn = document.getElementById('menu-btn');
    const menu = document.getElementById('menu');
    
    if (menuBtn) {
      menuBtn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
        menu.classList.toggle('animate__animated');
        menu.classList.toggle('animate__fadeIn');
      });
    }

    // Toggle "Crear" dropdown
    const crearBtn = document.getElementById('crearBtn');
    const crearMenu = document.getElementById('crearMenu');
    
    if (crearBtn) {
      crearBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        crearMenu.classList.toggle('hidden');
        crearMenu.classList.toggle('animate__animated');
        crearMenu.classList.toggle('animate__fadeIn');
      });
    }

    // Close dropdowns when clicking outside
    document.addEventListener('click', function(event) {
      if (crearBtn && !crearBtn.contains(event.target) && crearMenu && !crearMenu.contains(event.target)) {
        crearMenu.classList.add('hidden');
        crearMenu.classList.remove('animate__fadeIn');
      }
      
      if (menuBtn && !menuBtn.contains(event.target) && menu && !menu.contains(event.target)) {
        menu.classList.add('hidden');
        menu.classList.remove('animate__fadeIn');
      }
    });

    // Initialize with Turbo
    document.addEventListener('turbo:load', function() {
      // Re-initialize any necessary components
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });
  </script>
