<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ElRanchoDeMauricio</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-image: url('https://www.transparenttextures.com/patterns/tablecloth.png');
      background-color: #f8f8f8;
    }
    .navbar {
      background-color: #b30000 !important;
    }
    .navbar-brand, .nav-link, .btn-outline-light {
      font-weight: bold;
    }
    .card {
      border: 2px solid #d9534f;
      border-radius: 12px;
      height: 100%;
      transition: transform 0.3s;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
    .card-title {
      color: #b30000;
      font-weight: bold;
    }
    .btn-outline-primary {
      border-color: #b30000;
      color: #b30000;
    }
    .btn-outline-primary:hover {
      background-color: #b30000;
      color: white;
    }
    header {
      background-color: #fff3f3;
      border-bottom: 4px dashed #b30000;
    }
    footer {
      background-color: #2e8b57;
    }
    h1, h2, h3 {
      font-family: 'Georgia', serif;
    }
    .section-spacing {
      margin-bottom: 3rem;
    }
  </style>
</head>
<body>

  <!-- Barra de navegación -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/" data-turbo="false">ElRanchoDeMauricio</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
              aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/" data-turbo="false">Inicio</a></li>
        <li class="nav-item"><%= link_to "Blogs", blogs_path, class: "nav-link", data: { turbo: false } %></li>
        <li class="nav-item"><%= link_to "Informaciones", information_pages_path, class: "nav-link", data: { turbo: false } %></li>
          <li class="nav-item">
            <%= link_to "Mi Perfil", edit_user_registration_path, class: "nav-link", data: { turbo: false } %>
          </li>
        </ul>
        <div class="d-flex">
          <% if user_signed_in? %>
            <%= link_to "Editar Perfil", edit_user_registration_path, class: "btn btn-outline-light me-2", data: { turbo: false } %>

            <!-- Dropdown de Crear con data-turbo="false" -->
            <div class="dropdown me-2" data-turbo="false">
              <button class="btn btn-success dropdown-toggle"
                      type="button"
                      id="crearDropdown"
                      data-bs-toggle="dropdown"
                      aria-expanded="false">
                Crear
              </button>
              <ul class="dropdown-menu" aria-labelledby="crearDropdown">
                <li><%= link_to "Blog", new_blog_path, class: "dropdown-item", data: { turbo: false } %></li>
                <li><%= link_to "Información", new_information_path, class: "dropdown-item", data: { turbo: false } %></li>
              </ul>
            </div>

            <%= button_to "Cerrar Sesión", destroy_user_session_path, method: :delete, 
                          class: "btn btn-warning", data: { turbo: false } %>
          <% else %>
            <%= link_to "Iniciar Sesión", new_user_session_path, class: "btn btn-outline-light me-2", data: { turbo: false } %>
            <%= link_to "Registrarse", new_user_registration_path, class: "btn btn-light", data: { turbo: false } %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Banner principal -->
  <header class="py-5 text-center">
    <div class="container">
      <h1 class="display-4">Bienvenido a ElRanchoDeMauricio 🍝</h1>
      <p class="lead">Explora recetas, deja reseñas y comparte tus propias creaciones culinarias</p>
    </div>
  </header>

  <!-- Sección de búsqueda -->
  <section class="container my-4">
    <form class="row g-3" data-turbo="false">
      <div class="col-md-10">
        <input type="text" class="form-control" placeholder="Buscar recetas o ingredientes...">
      </div>
      <div class="col-md-2 d-grid">
        <button type="submit" class="btn btn-danger">Buscar</button>
      </div>
    </form>
  </section>

  <!-- Sección de blogs populares -->
  <section class="container section-spacing">
    <h2 class="mb-4">Blogs Populares</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% if @blogs.any? %>
        <% @blogs.each do |blog| %>
          <div class="col">
            <div class="card h-100">
              <img src="https://source.unsplash.com/random/300x200/?food,<%= blog.title.parameterize %>" 
                   class="card-img-top" 
                   alt="<%= blog.title %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text flex-grow-1"><%= truncate(blog.description, length: 100) %></p>
                <div class="mt-auto">
                  <div class="d-grid gap-2">
                    <%= link_to "Ver Blog", blog_path(blog), class: "btn btn-outline-primary", data: { turbo: false } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-12">
          <div class="alert alert-info">No hay blogs disponibles todavía.</div>
        </div>
      <% end %>
    </div>
    <% if @blogs.any? %>
      <div class="text-center mt-4">
        <%= link_to "Ver todos los blogs", blogs_path, class: "btn btn-danger", data: { turbo: false } %>
      </div>
    <% end %>
  </section>

  <!-- Sección de informaciones populares -->
  <section class="container section-spacing">
    <h2 class="mb-4">Informaciones Populares</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% if @informations.any? %>
        <% @informations.each do |information| %>
          <div class="col">
            <div class="card h-100">
              <img src="https://source.unsplash.com/random/300x200/?ingredients,<%= information.title.parameterize %>" 
                   class="card-img-top" 
                   alt="<%= information.title %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= information.title %></h5>
                <p class="card-text flex-grow-1"><%= truncate(information.description, length: 100) %></p>
                <div class="mt-auto">
                  <div class="d-grid gap-2">
                    <%= link_to "Ver Información", information_path(information), class: "btn btn-outline-primary", data: { turbo: false } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-12">
          <div class="alert alert-info">No hay informaciones disponibles todavía.</div>
        </div>
      <% end %>
    </div>
    <% if @informations.any? %>
      <div class="text-center mt-4">
        <%= link_to "Ver todas las informaciones", information_pages_path, class: "btn btn-danger", data: { turbo: false } %>
      </div>
    <% end %>
  </section>

  <footer class="text-white mt-5 p-4 text-center">
    &copy; 2025 ElRanchoDeMauricio. Todos los derechos reservados.
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Solución Turbo completa -->
  <script>
    // Función para inicializar componentes Bootstrap
    function initializeBootstrap() {
      // Dropdowns
      var dropdowns = [].slice.call(document.querySelectorAll('.dropdown-toggle'))
      dropdowns.forEach(function(dropdown) {
        new bootstrap.Dropdown(dropdown)
      })
      
      // Tooltips
      var tooltips = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
      tooltips.forEach(function(tooltip) {
        new bootstrap.Tooltip(tooltip)
      })
    }

    // Inicializar al cargar la página
    document.addEventListener('DOMContentLoaded', initializeBootstrap)
    
    // Inicializar con Turbo Drive
    document.addEventListener('turbo:load', initializeBootstrap)
    
    // Manejar navegación con el botón "Atrás"
    document.addEventListener('turbo:render', function() {
      if (window.history.state && window.history.state.turbo) {
        initializeBootstrap()
      }
    })
    
    // Solución adicional para formularios
    document.addEventListener('turbo:submit-end', function(event) {
      if (event.detail.success) {
        initializeBootstrap()
      }
    })
  </script>
</body>
</html>