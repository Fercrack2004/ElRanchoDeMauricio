<section class="mb-16 animate__animated animate__fadeIn">
  <h2 class="text-3xl font-serif font-bold text-primary-800 mb-8 text-center">
    Resultados para "<span class="text-accent-600"><%= params[:search] %></span>"
  </h2>

  <% if @blogs.any? || @informations.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <%# Renderiza una tarjeta por cada blog encontrado %>
      <% @blogs.each do |blog| %>
        <%= render 'blogs/blog_card', blog: blog %>
      <% end %>

      <%# Renderiza una tarjeta por cada información encontrada %>
      <% @informations.each do |information| %>
        <%= render 'information_pages/info_card', information: information %>
      <% end %>
    </div>
  <% else %>
    <%# Mensaje si no se encuentran resultados %>
    <div class="bg-primary-50 border-l-4 border-primary-600 p-4 rounded-lg max-w-2xl mx-auto">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9z" clip-rule="evenodd" /></svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-primary-800">No encontramos resultados</h3>
          <div class="mt-2 text-sm text-primary-700">
            <p>No hay contenido que coincida con "<%= params[:search] %>". Prueba con otros términos.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>