<div class="flex flex-wrap gap-4 items-center">
  <h3 class="text-lg font-semibold text-gray-800 w-full md:w-auto">Acciones:</h3>
  <%= link_to "Ver Reviews", blog_reviews_path(blog), class: "flex items-center px-5 py-2.5 bg-white border border-primary-600 text-primary-600 hover:bg-primary-50 rounded-lg font-medium shadow-sm transition-colors duration-200" %>
  <%= link_to "Dejar Review", new_blog_review_path(blog), class: "flex items-center px-5 py-2.5 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-medium shadow-md hover:shadow-lg transition-all duration-200" %>
  
  <%# Lógica de botones para usuarios con permisos %>
  <% participation = blog.blog_participations.find_by(user: current_user) %>
  <% if current_user && (participation&.autor_contribution? || current_user.admin? || current_user.moderator?) %>
    <%= link_to "Editar Blog", edit_blog_path(blog), class: "flex items-center px-5 py-2.5 bg-secondary-600 hover:bg-secondary-700 text-white rounded-lg font-medium shadow-md hover:shadow-lg transition-all duration-200" %>
    <% if current_user.admin? %>
      <%= button_to "Eliminar Blog", blog_path(blog), method: :delete, form: { data: { turbo_confirm: "¿Estás seguro de que quieres eliminar este blog?" } }, class: "flex items-center px-5 py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium shadow-md hover:shadow-lg transition-all duration-200" %>
    <% end %>
  <% end %>
</div>