<h1>Editar Blog</h1>

<%= form_with model: @blog, local: true do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :cook_time %><br>
    <%= form.text_field :cook_time %>
  </div>

  <div>
    <%= form.submit "Actualizar Blog" %>
  </div>
<% end %>
