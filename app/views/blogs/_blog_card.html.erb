<%# app/views/blogs/_blog_card.html.erb %>
<div class="food-card bg-white rounded-xl shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl flex flex-col">
  
  <div class="relative overflow-hidden h-56">
    <img src="https://source.unsplash.com/random/600x400/?food,<%= blog.title.parameterize %>" alt="<%= blog.title %>" class="food-img w-full h-full object-cover transition-transform duration-500" />
    <div class="absolute bottom-0 left-0 p-4 w-full bg-gradient-to-t from-black/70 to-transparent">
      <h3 class="text-xl font-bold text-white truncate"><%= blog.title %></h3>
    </div>
  </div>

  <div class="p-6 flex flex-col flex-grow">
    <p class="text-gray-600 mb-4 line-clamp-3 flex-grow"><%= blog.description %></p>

    <%# --- INICIO: NUEVA SECCIÓN DE METADATOS --- %>
    <div class="flex items-center justify-between text-sm text-gray-500 border-t border-gray-100 pt-4 mb-4">
      
      <%# Rating de Estrellas %>
      <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        <span class="font-bold text-gray-700">
          <% rating = blog.average_rating %>
          <% if rating > 0 %>
            <%= rating %>
          <% else %>
            Sin reseñas
          <% end %>
        </span>
      </div>

      <%# Tiempo de Cocina %>
      <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="font-semibold">
          <% if blog.cook_time.present? && blog.cook_time > 0 %>
            <%= blog.cook_time %> min
          <% else %>
            No especificado
          <% end %>
        </span>
      </div>

    </div>
    <%# --- FIN: NUEVA SECCIÓN DE METADATOS --- %>

    <div class="flex justify-end items-center mt-auto">
      <%= link_to blog_path(blog), class: "text-primary-600 hover:text-primary-800 font-medium flex items-center group" do %>
        <span>Ver más</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      <% end %>
    </div>
  </div>

</div>