<%# app/views/blogs/_ingredient_fields.html.erb %>
<div class="nested-fields border-t border-gray-200 pt-6 mt-6" data-new-record="<%= form.object.new_record? %>">
  
  <%# --- Fila para Nombre, Cantidad y BotÃ³n Eliminar --- %>
  <div class="grid grid-cols-1 md:grid-cols-6 gap-4 items-start">
    
    <%# Campo para el nombre del ingrediente %>
    <div class="md:col-span-3">
      <%= form.label :name, "Nombre Ingrediente", class: "text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-md", placeholder: "Ej: Harina de trigo", required: true %>
    </div>
    
    <%# Campo para la cantidad (ahora de texto) %>
    <div class="md:col-span-2">
      <%= form.label :quantity, "Cantidad", class: "text-sm font-medium text-gray-700" %>
      <%= form.text_field :quantity, class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-md", placeholder: "Ej: 200 gr, 1 taza", required: true %>
    </div>
    
    <%# BotÃ³n para eliminar %>
    <div class="text-right pt-7">
      <a href="#" data-action="click->nested-form#remove" class="text-red-500 hover:text-red-700 text-sm font-medium">Eliminar</a>
    </div>
  </div>

  <%# --- Fila para la Imagen del Ingrediente --- %>
  <div class="mt-4">
    <%= form.label :image, "Imagen del Ingrediente (Opcional)", class: "text-sm font-medium text-gray-700" %>
    <%= form.file_field :image, class: "w-full mt-1 text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-gray-700 hover:file:bg-gray-200" %>
  </div>

  <%= form.hidden_field :_destroy %>
</div>