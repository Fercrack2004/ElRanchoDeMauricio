<%# app/views/layouts/_navbar.html.erb %>
<nav class="bg-[linear-gradient(to_right,#991b1b,#b91c1c)] text-white shadow-lg sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-3">
      
      <%# --- LOGO --- %>
      <a href="/" class="text-2xl font-bold hover:text-primary-300 transition-colors duration-300 flex items-center">
        <span class="font-cursive text-3xl">ElRancho</span><span class="font-serif italic text-accent-400">de</span><span class="font-cursive text-3xl">Mauricio</span>
      </a>

      <%# --- MENÚ PRINCIPAL (para pantallas medianas y grandes) --- %>
      <div class="hidden md:flex items-center space-x-6">
        <ul class="flex space-x-4 text-lg font-semibold">
          <li><a href="/" class="relative group py-2 px-1 hover:text-accent-400 transition-colors">Inicio<span class="absolute bottom-0 left-0 w-0 h-0.5 bg-accent-400 transition-all duration-300 group-hover:w-full"></span></a></li>
          <li><%= link_to "Blogs", blogs_path, class: "relative group py-2 px-1 hover:text-accent-400 transition-colors" %></li>
          <li><%= link_to "Información", information_pages_path, class: "relative group py-2 px-1 hover:text-accent-400 transition-colors" %></li>
        </ul>

        <%# --- ACCIONES DE USUARIO --- %>
        <div class="flex items-center space-x-4">
          <% if user_signed_in? %>

            <%# --- INICIO: NUEVO MENÚ DESPLEGABLE 'CREAR' (SOLO PARA MODS/ADMINS) --- %>
            <% if current_user.user? || current_user.moderator? %>
              <div class="relative">
                <button id="crearBtn" class="bg-secondary-600 hover:bg-secondary-700 text-white px-4 py-2 rounded-full font-semibold transition-all flex items-center space-x-2 shadow-md hover:shadow-lg">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                  <span>Crear</span>
                </button>
                
                <ul id="crearMenu" class="hidden absolute right-0 mt-2 w-52 bg-white rounded-lg shadow-xl text-gray-800 z-10 overflow-hidden">
                  <li>
                    <%= link_to new_blog_path, class: "block px-4 py-3 hover:bg-secondary-50 transition-colors flex items-center space-x-2" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                      <span>Nuevo Blog de Receta</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_information_path, class: "block px-4 py-3 hover:bg-secondary-50 transition-colors flex items-center space-x-2" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                      <span>Nueva Pág. de Información</span>
                    <% end %>
                  </li>
                </ul>
              </div>
            <% end %>
            <%# --- FIN: NUEVO MENÚ DESPLEGABLE 'CREAR' --- %>

            <%= link_to edit_user_registration_path, class: "flex items-center space-x-2 group" do %>
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar.variant(resize_to_fill: [32, 32]), class: "h-8 w-8 rounded-full border-2 border-primary-300 group-hover:border-white transition" %>
              <% else %>
                <div class="h-8 w-8 rounded-full bg-primary-700 flex items-center justify-center border-2 border-primary-300 group-hover:border-white transition">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                </div>
              <% end %>
              <span class="font-semibold group-hover:text-accent-400 transition-colors"><%= current_user.username || current_user.email %></span>
            <% end %>

            <%= button_to destroy_user_session_path, method: :delete, class: "bg-accent-600 hover:bg-accent-700 text-white px-3 py-1.5 rounded-full font-semibold text-sm transition-all" do %>
              <span>Cerrar Sesión</span>
            <% end %>
          <% else %>
            <%= link_to "Iniciar Sesión", new_user_session_path, class: "font-semibold hover:text-accent-400 transition-colors" %>
            <%= link_to "Registrarse", new_user_registration_path, class: "bg-white text-primary-800 px-4 py-2 rounded-full font-semibold hover:bg-primary-100 transition-all shadow-md" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>