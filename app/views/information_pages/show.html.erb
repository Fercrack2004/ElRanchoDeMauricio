<%# app/views/information_pages/show.html.erb %>
<div class="bg-gray-50 py-8 md:py-12">
  <main class="container mx-auto px-4">
    
    <div class="mb-8">
      <%= link_to information_pages_path, class: "inline-flex items-center group text-primary-600 hover:text-primary-800" do %>
        <svg class="h-6 w-6 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
        <span class="text-lg font-medium">Volver a Información</span>
      <% end %>
    </div>

    <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200">
      <%# 1. Imagen de Portada %>
      <%= render 'information_pages/info_image', information: @information %>
      
      <div class="p-6 md:p-10">
        <%# 2. Título y Descripción %>
        <%= render 'information_pages/info_header', information: @information %>
        
        <%# 3. Contenido Principal (Índice y Secciones) %>
        <%= render 'information_pages/info_body', information: @information %>

        <%# 4. Botones de Acción %>
        <%= render 'information_pages/info_actions', information: @information %>
      </div>
    </div>
    
  </main>
</div>