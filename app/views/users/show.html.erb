<h1><%= @user.username %></h1>
<p>Email: <%= @user.email %></p>
<p>Role: <%= @user.role %></p>
<p>Description: <%= @user.description %></p>
<p>ID: <%= @user.id %></p>

<% if current_user.admin? %>
    <%= button_to "Eliminar Usuario", user_path(@user),
              method: :delete,
              data: { confirm: "Seguro de que quieres eliminarlo?" },
              class: "btn btn-danger" %>
<% end %>