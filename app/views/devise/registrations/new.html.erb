<%# app/views/devise/registrations/new.html.erb %>

<%# Contenedor principal para centrar la tarjeta vertical y horizontalmente %>
<div class="bg-gray-50 flex flex-col justify-center items-center min-h-screen py-12 px-4">
  
  <%# Logo que enlaza a la página de inicio %>
  <div class="mb-8">
    <a href="/" class="text-2xl font-bold flex items-center">
      <span class="font-cursive text-3xl text-primary-700">ElRancho</span><span class="font-serif italic text-accent-600">de</span><span class="font-cursive text-3xl text-primary-700">Mauricio</span>
    </a>
  </div>

  <%# La tarjeta que contiene el formulario %>
  <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-8">
    
    <h2 class="text-3xl font-serif font-bold text-primary-800 text-center mb-6">Crear una Cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <%# Campo de Nombre de Usuario %>
        <div>
          <%= f.label :username, "Nombre de usuario", class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_field :username, autocomplete: "username", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500", required: true %>
        </div>

        <%# Campo de Número de Teléfono %>
        <div>
          <%= f.label :phone_number, "Número de teléfono", class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.telephone_field :phone_number, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500", required: true %>
        </div>

        <%# Campo de Email %>
        <div>
          <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500", required: true %>
        </div>

        <%# Campo de Contraseña %>
        <div>
          <%= f.label :password, "Contraseña", class: "block text-gray-700 font-semibold mb-2" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-500">(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500", required: true %>
        </div>

        <%# Campo de Confirmación de Contraseña %>
        <div>
          <%= f.label :password_confirmation, "Confirmar contraseña", class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500", required: true %>
        </div>
      </div>

      <%# Botón de Submit %>
      <div class="actions mt-8">
        <%= f.submit "Registrarse", class: "w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-3 px-4 rounded-lg transition-all shadow-md hover:shadow-lg cursor-pointer" %>
      </div>
    <% end %>

    <%# Renderiza los enlaces de "Iniciar Sesión", etc. %>
    <div class="mt-6 border-t pt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

